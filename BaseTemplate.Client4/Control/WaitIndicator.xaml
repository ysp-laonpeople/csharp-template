<UserControl x:Class="BaseTemplate.Client4.Control.WaitIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaseTemplate.Client4.Control"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid Background="White" Opacity="0.5"/>
        <mah:ProgressRing />
        <Label Content="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"></Label>
    </Grid>
</UserControl>
